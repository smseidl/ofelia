name: GitHub Releases Push
on:
  release:
    types:
      - created
  push:
    branches:
      - master
jobs:
  docker:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Build image
      uses: mr-smithers-excellent/docker-build-push@v2
      with:
        image: mcuadros/ofelia
        registry: ghcr.io
        username: mcuadros
        password: ${{ secrets.GHCR_TOKEN }}

    - name: Tag image
      if: github.event_name == 'release'
      uses: mr-smithers-excellent/docker-build-push@v2
      with:
        image: mcuadros/ofelia
        registry: ghcr.io
        tag: latest
        username: mcuadros
        password: ${{ secrets.GHCR_TOKEN }}
